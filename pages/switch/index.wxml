<!--pages/switch/index.wxml-->
<view class='page'>
  <view class='page__hd'>
    <text class='page__title'>switch</text>
    <text class='page__desc'>开关</text>
  </view>
  <view class='page__bg'>
    <view class='section section_gap'>
      <view class='section__title'>type="switch"</view>
      <view class='body-view'>
        <switch checked='{{switch1}}' bindchange='switch1Change'></switch>
      </view>
    </view>

    <view class='section section_gap'>
      <view class='section__title'>type="checkbox"</view>
      <view class='body-view'>
        <switch type='checkbox' checked='{{switch2}}' bindchange='switch2Change'></switch>
      </view>
    </view>
  </view>
</view>
