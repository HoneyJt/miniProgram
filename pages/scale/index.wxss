movable-area{
  width: 400rpx;
  height: 400rpx;
  margin: 50rpx;
  background-color: #ccc;
  overflow: hidden;
}

movable-view{
  display: flex;
  align-items: center;
  height: 100rpx;
  width: 100rpx;
  background: #1AAD19;
  justify-content: center;
  color: #fff;
}

.max{
  width: 600rpx;
  height: 600rpx;
}

.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section:last-child{
  margin-bottom: 0;
}

.page-section-title{
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.intro {
  margin: 30px;
  text-align: center;
}
.group{
  width: 100%;
  height: 100px;
}
